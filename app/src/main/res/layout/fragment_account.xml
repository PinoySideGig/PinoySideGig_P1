<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="20dp"
        android:gravity="center_horizontal">

        <!-- Top Banner Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/acc_banner3"
            android:layout_marginBottom="-60dp" />
<!--        <ImageView-->
<!--            android:id="@+id/bannerImageView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="150dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/acc_banner"-->
<!--            android:layout_marginBottom="-60dp" />-->

        <!-- Circular Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:src="@drawable/avatar_1"
            android:background="@drawable/circle_shape"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:elevation="6dp" />

        <!-- Username, Location and Join Date -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arnoldy Chafe"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quezon City  â€¢  Joined Sept 2023"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Follow, Message, More Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">



            <Button
                android:id="@+id/messageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginHorizontal="15dp"
                app:icon="@drawable/ic_email"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                app:icon="@drawable/baseline_edit_24"
                android:text="Edit Profile"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />


        </LinearLayout>

        <!-- Short Bio -->
        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input content here..."
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_margin="16dp" />

        <!-- Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Information List (Website, Email, Phone, Joined) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pinoy@sidegig.com"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+639999952766"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Joined Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/bdayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 March, 2023"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tags/Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating"
                android:textAlignment="center"
                android:padding="8dp"
                android:background="@drawable/tag_background"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score"
                android:textAlignment="center"
                android:padding="8dp"
                android:background="@drawable/tag_background"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reviews"
                android:textAlignment="center"
                android:padding="8dp"
                android:background="@drawable/tag_background"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="#EE0000"
                android:textColor="#FFFFFF"
                android:elevation="4dp"
                app:icon ="@drawable/ic_logout"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>