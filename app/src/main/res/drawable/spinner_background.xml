<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border Color and Width -->
    <stroke
        android:width="2dp"
        android:color="#9A9A9A" /> <!-- Change to your desired color -->

    <!-- Corner Radius for Rounded Edges (Optional) -->
    <corners android:radius="8dp" />

    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- Spinner background color -->

    <!-- Padding inside the Spinner -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>